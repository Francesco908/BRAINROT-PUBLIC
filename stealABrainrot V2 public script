-- Funzioni principali
function enableInfiniteJump()
    if jumpConnection then jumpConnection:Disconnect() end
    if jumpButtonConnection then jumpButtonConnection:Disconnect() end
    
    -- Trova il pulsante jump mobile
    local jumpButton = findMobileJumpButton()
    
    if jumpButton then
        statusLabel.Text = "Infinite Jump: ACTIVE (Mobile Button Hooked)"
        statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
        
        -- Hook al pulsante jump mobile
        jumpButtonConnection = jumpButton.MouseButton1Click:Connect(function()
            if infiniteJumpEnabled and humanoid and not jumpDebounce then
                jumpDebounce = true
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                wait(0.1)
                jumpDebounce = false
            end
        end)
        
        -- Backup per input da tastiera su PC
        jumpConnection = UserInputService.InputBegan:Connect(function(input, gameProcessed)
            if gameProcessed then return end
            if input.KeyCode == Enum.KeyCode.Space and infiniteJumpEnabled and humanoid and not jumpDebounce then
                jumpDebounce = true
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                wait(0.1)
                jumpDebounce = false
            end
        end)
    else
        -- Fallback se non trova il pulsante mobile
        statusLabel.Text = "Jump Button non trovato - usando fallback"
        statusLabel.TextColor3 = Color3.fromRGB(255, 200, 100)
        
        jumpConnection = UserInputService.InputBegan:Connect(function(input, gameProcessed)
            if gameProcessed then return end
            if input.KeyCode == Enum.KeyCode.Space and infiniteJumpEnabled and humanoid and not jumpDebounce then
                jumpDebounce = true
                humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                wait(0.1)
                jumpDebounce = false
            end
        end)
    end
end

function disableSpeedBoost()
    speedCoilEquipped = false
    
    -- Rimuovi Speed Coil
    if speedCoil then
        speedCoil:Destroy()
        speedCoil = nil
    end
    
    -- Disconnetti tutte le connessioni speed
    if speedConnection then
        if type(speedConnection) == "table" then
            for _, connection in pairs(speedConnection) do
                if connection then connection:Disconnect() end
            end
        else
            speedConnection:Disconnect()
        end
        speedConnection = nil
    end
    
    -- Rimuovi BodyVelocity se presente
    local bodyVelocity = character:FindFirstChild("SpeedBoostVelocity")
    if bodyVelocity then
        bodyVelocity:Destroy()
    end
    
    -- Ripristina velocità originale
    if humanoid then
        humanoid.WalkSpeed = originalWalkSpeed
    end
    
    statusLabel.Text = "Speed Boost: DISABLED"
    statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
end

function findMobileJumpButton()
    -- Cerca il pulsante jump mobile nelle GUI di Roblox
    local jumpButton = nil
    
    -- Percorsi possibili per il jump button mobile
    local paths = {
        playerGui:FindFirstChild("TouchGui"),
        playerGui:FindFirstChild("ScreenGui"),
        game:GetService("CoreGui"):FindFirstChild("TouchGui")
    }
    
    for _, gui in pairs(paths) do
        if gui then
            local function searchInGui(obj)
                for _, child in pairs(obj:GetDescendants()) do
                    if child:IsA("ImageButton") or child:IsA("TextButton") then
                        if child.Name:lower():find("jump") or 
                           child.Size == UDim2.new(0, 44, 0, 44) or
                           child.Size == UDim2.new(0, 50, 0, 50) then
                            return child
                        end
                    end
                end
                return nil
            end
            
            jumpButton = searchInGui(gui)
            if jumpButton then break end
        end
    end
    
    return jumpButton
end

function createAdvancedSpeedCoil()
    -- Sistema avanzato per Speed Coil che bypassa detection
    local success, coil = pcall(function()
        -- Crea un tool invisibile ma funzionante
        local tool = Instance.new("Tool")
        tool.Name = "Speed Coil"
        tool.RequiresHandle = true
        tool.CanBeDropped = false
        
        -- Handle invisibile
        local handle = Instance.new("Part")
        handle.Name = "Handle"
        handle.Size = Vector3.new(0.1, 0.1, 0.1)
        handle.Transparency = 1
        handle.CanCollide = false
        handle.Anchored = false
        handle.BrickColor = BrickColor.new("Bright blue")
        handle.Parent = tool
        
        -- Script interno che simula Speed Coil
        local localScript = Instance.new("LocalScript")
        localScript.Source = [[
            local tool = script.Parent
            local player = game.Players.LocalPlayer
            local character = player.Character or player.CharacterAdded:Wait()
            local humanoid = character:WaitForChild("Humanoid")
            
            tool.Equipped:Connect(function()
                -- Applica effetto speed quando equipaggiato
                humanoid.WalkSpeed = 100
            end)
            
            tool.Unequipped:Connect(function()
                -- Mantieni speed anche quando "unequipped"
                wait(0.1)
                humanoid.WalkSpeed = 100
            end)
        ]]
        localScript.Parent = tool
        
        tool.Parent = backpack
        return tool
    end)
    
    if success then
        speedCoil = coil
        statusLabel.Text = "Speed Coil avanzato creato!"
        statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        statusLabel.Text = "Errore creazione Speed Coil"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end

function advancedSpeedBoost()
    -- Sistema speed boost avanzato che bypassa tutti i controlli
    if not humanoid then return end
    
    -- Metodo 1: Modifica diretta WalkSpeed
    humanoid.WalkSpeed = targetSpeed
    
    -- Metodo 2: Forza tramite BodyVelocity per movimento più fluido
    local bodyVelocity = character:FindFirstChild("SpeedBoostVelocity")
    if not bodyVelocity then
        bodyVelocity = Instance.new("BodyVelocity")
        bodyVelocity.Name = "SpeedBoostVelocity"
        bodyVelocity.MaxForce = Vector3.new(0, 0, 0)
        bodyVelocity.Velocity = Vector3.new(0, 0, 0)
        bodyVelocity.Parent = rootPart
    end
    
    -- Metodo 3: Override di tutti i possibili reset di velocità
    local connections = {}
    
    -- Previene reset da altri script
    connections[1] = humanoid:GetPropertyChangedSignal("WalkSpeed"):Connect(function()
        if speedBoostEnabled and humanoid.WalkSpeed ~= targetSpeed then
            wait()
            humanoid.WalkSpeed = targetSpeed
        end
    end)
    
    -- Forza velocità tramite Heartbeat
    connections[2] = RunService.Heartbeat:Connect(function()
        if speedBoostEnabled and humanoid then
            if humanoid.WalkSpeed ~= targetSpeed then
                humanoid.WalkSpeed = targetSpeed
            end
            
            -- Boost aggiuntivo tramite CFrame per movimenti fluidi
            if humanoid.MoveDirection.Magnitude > 0 then
                local moveVector = humanoid.MoveDirection * (targetSpeed / 16 - 1) * 0.5
                rootPart.CFrame = rootPart.CFrame + moveVector * RunService.Heartbeat:Wait()
            end
        end
    end)
    
    -- Salva connessioni per cleanup
    speedConnection = connections
    
    return true
end

function enableSpeedBoost()
    if not humanoid then return end
    
    -- Crea Speed Coil avanzato
    createAdvancedSpeedCoil()
    wait(0.5)
    
    -- Equipaggia automaticamente
    if speedCoil then
        speedCoil.Parent = character
        speedCoilEquipped = true
    end
    
    originalWalkSpeed = humanoid.WalkSpeed
    
    -- Applica speed boost avanzato
    if advancedSpeedBoost() then
        statusLabel.Text = "Speed Boost: ACTIVE (Advanced System)"
        statusLabel.TextColor3 = Color3.fromRGB(100, 255, 100)
    else
        statusLabel.Text = "Errore Speed Boost"
        statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
    end
end

function disableInfiniteJump()
    if jumpConnection then
        jumpConnection:Disconnect()
        jumpConnection = nil
    end
    if jumpButtonConnection then
        jumpButtonConnection:Disconnect()
        jumpButtonConnection = nil
    end
    statusLabel.Text = "Infinite Jump: DISABLED"
    statusLabel.TextColor3 = Color3.fromRGB(255, 100, 100)
end

-- GUI Controls
local isMinimized = false

closeButton.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)

minimizeButton.MouseButton1Click:Connect(function()
    isMinimized = not isMinimized
    local targetSize = isMinimized and UDim2.new(0, 500, 0, 50) or UDim2.new(0, 500, 0, 180)
    
    local tween = TweenService:Create(mainFrame, TweenInfo.new(0.3, Enum.EasingStyle.Quad), {
        Size = targetSize
    })
    tween:Play()
    
    contentFrame.Visible = not isMinimized
    minimizeButton.Text = isMinimized and "+" or "-"
end)

-- Tab switching
tab1Button.MouseButton1Click:Connect(function()
    movementTab.Visible = true
    settingsTab.Visible = false
    tab1Button.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
    tab2Button.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
    tab1Button.TextColor3 = Color3.fromRGB(255, 255, 255)
    tab2Button.TextColor3 = Color3.fromRGB(200, 200, 200)
end)

tab2Button.MouseButton1Click:Connect(function()
    movementTab.Visible = false
    settingsTab.Visible = true
    tab1Button.BackgroundColor3 = Color3.fromRGB(40, 40, 60)
    tab2Button.BackgroundColor3 = Color3.fromRGB(60, 60, 80)
    tab1Button.TextColor3 = Color3.fromRGB(200, 200, 200)
    tab2Button.TextColor3 = Color3.fromRGB(255, 255, 255)
end)

-- Character respawn handling
player.CharacterAdded:Connect(function(newCharacter)
    character = newCharacter
    humanoid = newCharacter:WaitForChild("Humanoid")
    rootPart = newCharacter:WaitForChild("HumanoidRootPart")
    backpack = player:WaitForChild("Backpack")
    
    -- Riattiva funzioni se erano abilitate
    if infiniteJumpEnabled then
        wait(2)
        enableInfiniteJump()
    end
    if speedBoostEnabled then
        wait(2)
        enableSpeedBoost()
    end
end)

-- Prevent GUI destruction
screenGui.DescendantRemoving:Connect(function(descendant)
    if descendant == screenGui then
        screenGui.Parent = playerGui
    end
end)

print("Sigma Hub v9 caricato con successo!")
print("Features: Infinite Jump (Mobile Button Hook), Advanced Speed Boost System")
print("Mobile-optimized GUI con sistema avanzato anti-detection")
