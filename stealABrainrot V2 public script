    stealBtn.BorderSizePixel = 0
    stealBtn.Parent = mainFrame
    
    local stealBtnCorner = Instance.new("UICorner")
    stealBtnCorner.CornerRadius = UDim.new(0, 12)
    stealBtnCorner.Parent = stealBtn
    
