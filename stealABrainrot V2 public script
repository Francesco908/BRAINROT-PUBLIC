-- New draggable Orion Lib script for hub creations!
local OrionLib = loadstring(game:HttpGet(('https://pastebin.com/raw/WRUyYTdY')))()

-- Crea la finestra principale
local Window = OrionLib:MakeWindow({
    Name = "Illusion Hub", -- Nome del tuo hub
    HidePremium = false,
    SaveConfig = true,
    ConfigFolder = "IllusionHubConfig"
})

print("Illusion Hub successfully executed.") -- Debug

-- Funzione helper per creare tab
local function createTab(name, premium)
    return Window:MakeTab({
        Name = name,
        Icon = "rbxassetid://4483345998", -- icona di default
        PremiumOnly = premium or false
    })
end

-- Crea tutti i tab richiesti
local MainTab = createTab("Main")
local MiscTab = createTab("Misc")
local VisualTab = createTab("Visual")
local ToxicTab = createTab("Toxic")
local ChannelTab = createTab("Channel")
local PremiumTab = createTab("Premium", true)

-- Esempio: contenuti in ogni tab
MainTab:AddButton({
    Name = "Welcome " .. game.Players.LocalPlayer.Name .. "!",
    Callback = function() end
})

MiscTab:AddButton({
    Name = "Nameless Admin",
    Callback = function()
        loadstring(game:HttpGet("https://raw.githubusercontent.com/ltseverydayyou/Nameless-Admin/main/Source.lua"))()
    end
})

VisualTab:AddButton({
    Name = "Infinite Yield",
    Callback = function()
        loadstring(game:HttpGet('https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source'))()
    end
})

ToxicTab:AddButton({
    Name = "Kill All (Example)",
    Callback = function()
        print("Qui puoi mettere il tuo script Toxic")
    end
})

ChannelTab:AddButton({
    Name = "Copy Discord Link",
    Callback = function()
        setclipboard("https://discord.gg/9vsvzS6mer")
        toclipboard("https://discord.gg/9vsvzS6mer")
    end
})

PremiumTab:AddSection({
    Name = "Premium Features"
})
PremiumTab:AddButton({
    Name = "Coming Soon...",
    Callback = function() end
})

